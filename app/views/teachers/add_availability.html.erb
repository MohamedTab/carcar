<%= form_for(Availability.new) do |f| %>
    <div class="field">
    <%= f.label :starts_at %><br>
    <%= f.datetime_select :starts_at, :minute_step => 60  %>
  </div>
  <div class="field">
    <%= f.label :ends_at %><br>
    <%= f.datetime_select :ends_at, :minute_step => 30 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
      <% end %>
