<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <h2><strong>Espace élèves </strong></h2>
      <%= render "learners/shared/links" %>
    </div>
    <div class="col-xs-12  col-sm-6">
      <div class="form-group">
        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :date_of_birth %><br />
          <%= f.date_field :date_of_birth, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :phone %><br />
          <%= f.text_field :phone, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :address %><br />
          <%= f.text_field :address, autofocus: true, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :city %><br />
          <%= f.text_field :city, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :zip %><br />
          <%= f.text_field :zip, autofocus: true, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :country %><br />
          <%= f.text_field :country, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :picture %>
        <%= f.file_field :picture %>
      </div>
             <!-- Ici on ajoute les modifs -->
      <div class="form-group">
        <div class="field">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
        </div>
      </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>
  </div>
</div>
</div>



