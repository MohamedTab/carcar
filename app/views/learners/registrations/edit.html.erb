<!-- <h2>Edit <%= resource_name.to_s.humanize %></h2> -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="row">
        <div class="col-xs-12">
          <h3><strong>MON COMPTE</strong></h3>
        </div>
        <div class="col-xs-12 navbar_learner hvr-underline-from-center">
          <%= link_to 'Mon planning', learner_path(@learner) %>
        </div>
        <div class="col-xs-12 navbar_learner hvr-underline-from-center">
          <%= link_to 'Données personnells', edit_learner_registration_path %>
        </div>
        <div class="col-xs-12 navbar_learner hvr-underline-from-center">
          <%= link_to 'Historique de mes leçon', edit_learner_registration_path %>
        </div>
      </div>
    </div>
    <div class="border_form">
      <div class="col-xs-12 col-sm-offset-1 col-sm-6">
        <div class="form-group">
          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :date_of_birth %><br />
            <%= f.date_field :date_of_birth, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :phone %><br />
            <%= f.text_field :phone, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :address %><br />
            <%= f.text_field :address, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :city %><br />
            <%= f.text_field :city, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :zip %><br />
            <%= f.text_field :zip, autofocus: true, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :country %><br />
            <%= f.text_field :country, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <div class="field">
          <%= f.label :picture %>
          <%= f.file_field :picture %>
        </div>

                    <!-- Ici on ajoute les modifs -->

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group">
          <div class="field">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Update", :class => "btn btn-primary" %>
          <%= link_to "Back", :back, :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-5 col-sm-6">
        <div class="row">
          <div class="col-xs-6">
            <h3>Cancel my account</h3>
              <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
              </p>
          </div>
          <div class="col-xs-6">
            <div class="add_school text-center">
              <h3> Mon auto-école </h3>
                <%= form_tag(update_add_school_learner_path(@learner)) do %>
                  <div class="form-group text-center">
                    <div class="field">
                      <%= collection_select(:learner, :school_id, School.all, :id, :name, :class => "form-control") %>
                    </div>
                  </div>
                    <div class="actions">
                      <%= submit_tag "Inscription", :class => "bnt btn-danger" %>
                    </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
<br>
<br>
<br>
