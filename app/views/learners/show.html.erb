
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>MON COMPTE</h3>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-xs-12 col-sm-4 navbar_learner">
      <%= link_to 'Mon planning', learner_path(@learner) %>
    </div>
    <div class="col-xs-12 col-sm-4 navbar_learner">
      <%= link_to 'Données personnells', edit_learner_registration_path %>
    </div>
    <div class="col-xs-12 col-sm-4 navbar_learner">
      <%= link_to 'Historique de mes leçon', edit_learner_registration_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div class="row">
        <h2 class="text-center"; style="padding-bottom: 20px;"> <strong> Je reserve une heure </strong></h2>
          <% if @learner.school.nil? %>
            "Ajouter une école pour consulter le planning de vos moniteurs"
          <% else %>
            <% @teachers.each do |teacher| %>
              <div class="col-xs-12 col-sm-5 teacher_show_learner">
                <div class="row">
                  <div class="col-xs-4 text-center">
                    <%= image_tag teacher.picture.url(:thumb) %>
                  </div>
                  <div class="col-xs-8">
                    <div class="row">
                      <div class="col-xs-12", style="background-color: #6685A3; margin-left: 2px; padding-right: 0px;">
                        <strong><%= link_to teacher.name, teacher_path(params[:id]), style: " color: white;" %> </strong>
                      </div>
                      <div class="col-xs-12">
                        <p style="text-decoration: underline;"> <strong> Prochaines disponibilitées : </strong></p>
                      </div>
                      <div class="col-xs-12">
                        <p style="color: #242932;"> <strong>02/02/2015 à 9h00 </strong></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <%end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 hours_booked">
      <h3 class="text-center"> <strong> Vos reservation ! </strong></h3>
        <% @lessons.each do |lesson| %>
        <div class="row hour_booked">
          <div class="col-xs-8">
            <p> <strong><%= lesson.starts_at %> de <%= "#{lesson.starts_at.hour}h - #{lesson.ends_at.hour}h" %> </strong> </p>
            <p class="text-right">Moniteur: <strong> <%= lesson.availability.teacher.name %></strong> </p>
          </div>
          <div class="col-xs-4 border_between_date_btn">
            <div class="btn btn-danger btn_cancel">
            Annuler
            </div>
            <div class="btn btn-warning">
            Reporter
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
<br>
<br>
<br>


<%= link_to "sign out", destroy_learner_session_path, method: :delete, :class => "sign_out_show_learner btn btn-primary" %>


