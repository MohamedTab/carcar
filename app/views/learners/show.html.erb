<div class="container">
  <div class="row">

    <div class="col-xs-12">
      <h3>MON COMPTE</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <ul class="list-inline">
        <li><%= link_to 'Mon planning', learner_path(@learner) %></li>
        <li><%= link_to 'Données personnells', edit_learner_registration_path %></li>
        <li>Historique de mes leçons</li>
      </ul>
    </div>
  </div>
</div>

<%= link_to "sign out", destroy_learner_session_path, method: :delete %>


<div class="calendar" >
  <%= week_calendar do |date| %>
      <%= date.mday %>
  <% end %>
</div>

<br> </br>
<br> </br>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">
      <table>
        <thead>
          <tr>
            <th>Starts at</th>
            <th>Ends at</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.starts_at.day     %></td>
              <td><%= lesson.ends_at %></td>
              <td><%= link_to 'Show', lesson %></td>
              <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
              <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-4">
      <h3>Mes Moniteurs </h3>
        <% if @learner.school.nil? %>
          "Ajouter une école pour consulter le planning de vos moniteurs"
        <% else %>
          <% @teachers.each do |teacher| %>
            <ul>
              <li class="text-left"> <%= link_to teacher.name, teacher_path(teacher) %> </li>
            </ul>
          <% end %>
        <%end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="add_school text-center">
        <h3> Mon auto-école </h3>
          <%= form_tag(update_add_school_learner_path(@learner)) do %>
            <div class="form-group text-center">
              <div class="field">
                <%= collection_select(:learner, :school_id, School.all, :id, :name, :class => "form-control") %>
              </div>
            </div>
            <button type="submit" class="btn btn-default">
              <div class="actions">
                 <%= submit_tag %>
              </div>
           </button>
          <% end %>
      </div>
    </div>
  </div>
</div>
<br>
